{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/SAP-Cloud-Platform-Integration/notify/master/notify_schema.json",
  "type": "object",
  "title": "Notify Schema",
  "required": [
    "check_interval_second",
    "smtp",
    "tenants"
  ],
  "properties": {
    "check_interval_second": {
      "$id": "#/properties/check_interval_second",
      "type": "integer",
      "title": "The Check_interval_second Schema",
      "default": 0,
      "examples": [
        300
      ]
    },
    "smtp": {
      "$id": "#/properties/smtp",
      "type": "object",
      "title": "The Smtp Schema",
      "required": [
        "server_ip",
        "server_port",
        "credential"
      ],
      "properties": {
        "server_ip": {
          "$id": "#/properties/smtp/properties/server_ip",
          "type": "string",
          "title": "The Server_ip Schema",
          "default": "",
          "examples": [
            "1.2.3.4"
          ],
          "pattern": "^(.*)$"
        },
        "server_port": {
          "$id": "#/properties/smtp/properties/server_port",
          "type": "string",
          "title": "The Server_port Schema",
          "default": "",
          "examples": [
            "443"
          ],
          "pattern": "^(.*)$"
        },
        "credential": {
          "$id": "#/properties/smtp/properties/credential",
          "type": "object",
          "title": "The Credential Schema",
          "required": [
            "username",
            "password"
          ],
          "properties": {
            "username": {
              "$id": "#/properties/smtp/properties/credential/properties/username",
              "type": "string",
              "title": "The Username Schema",
              "default": "",
              "examples": [
                "smtp username"
              ],
              "pattern": "^(.*)$"
            },
            "password": {
              "$id": "#/properties/smtp/properties/credential/properties/password",
              "type": "string",
              "title": "The Password Schema",
              "default": "",
              "examples": [
                "smtp password"
              ],
              "pattern": "^(.*)$"
            }
          }
        }
      }
    },
    "tenants": {
      "$id": "#/properties/tenants",
      "type": "array",
      "title": "The Tenants Schema",
      "items": {
        "$id": "#/properties/tenants/items",
        "type": "object",
        "title": "The Items Schema",
        "required": [
          "url",
          "username",
          "password",
          "contact_email"
        ],
        "properties": {
          "url": {
            "$id": "#/properties/tenants/items/properties/url",
            "type": "string",
            "title": "The Url Schema",
            "default": "",
            "examples": [
              "https://d100016-tmn.hci.eu1.hana.ondemand.com/itspaces/shell/integration"
            ],
            "pattern": "^(.*)$"
          },
          "username": {
            "$id": "#/properties/tenants/items/properties/username",
            "type": "string",
            "title": "The Username Schema",
            "default": "",
            "examples": [
              "your user name"
            ],
            "pattern": "^(.*)$"
          },
          "password": {
            "$id": "#/properties/tenants/items/properties/password",
            "type": "string",
            "title": "The Password Schema",
            "default": "",
            "examples": [
              "your user password"
            ],
            "pattern": "^(.*)$"
          },
          "contact_email": {
            "$id": "#/properties/tenants/items/properties/contact_email",
            "type": "string",
            "title": "The Contact_email Schema",
            "default": "",
            "examples": [
              "theo.sun@outlook.com"
            ],
            "pattern": "^(.*)$"
          }
        }
      }
    }
  }
}